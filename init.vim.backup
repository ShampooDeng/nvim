syntax on
filetype plugin on

set number
set relativenumber
set smartindent
set autoindent
set shiftwidth=4
set softtabstop=4
set ttimeoutlen=100
set ignorecase
set smartcase
set clipboard+=unnamedplus

" >>> key mapping >>>
noremap ; :
noremap . >
noremap , <


" >>> Config for neovim vscode extension >>>
if !exists('g:vscode')
    " ordinary Neovim
else
    " VScode extension
endif

